<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="FullScreen">
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >fill_parent</item>
        <item name="android:background" >@drawable/backgroundgradient</item>
    </style>

    <style name="NormalText">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#4e4545</item>
    </style>
    
    <style name="NormalText.Wrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="NormalText.Wrapped.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="NormalText.InputControl">
        <item name="android:padding">10px</item>
        <item name="android:textSize">18sp</item>
        <item name="android:color">#505050</item>
        <item name="android:layout_width">340px</item>
        <item name="android:layout_height">130px</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
